<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CENTRO DE AYUDA PSICOLOGICA"
        android:textColor="@color/azulbonito"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="Psicologo"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="167dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:hint="Nombre completo"
        android:id="@+id/editaditoPsicologo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="127dp" />
    <Button
        android:id="@+id/subirPsicologo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/azulbonito"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Dar de Alta"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp" />
    <Button
        android:id="@+id/RegresarInicioDesdePsicologos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/azulbonito"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Regresar"/>
</LinearLayout>