<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CENTRO DE AYUDA PSICOLOGICA"
        android:textColor="@color/azulbonito"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="Paciente"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija su accion"
        android:gravity="center"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Altitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azulbonito"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Altas"/>

            <Button
                android:id="@+id/Bajas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azulbonito"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Bajas"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Cambios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/azulbonito"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Cambios"/>

            <Button
                android:id="@+id/Consultas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azulbonito"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Consultas"/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <Button
        android:id="@+id/RegresarInicioDesdeUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/azulbonito"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Regresar"/>

</LinearLayout>